<div class="main-header non-printable">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <%= link_to image_tag('logo.png', alt: 'Water HY-Drant Project'), root_path %>
        <p id="notice">
          <%= notice %>
        </p>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12 text-center">
        <h4 class="bold">SELECT (BILL NO) OR (DATE WISE)</h4>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-12">
        <div class="error text-center">
          <h2 id="error_log"></h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <div class="field">
          <label for="bill_no">Bill No</label>
          <select name="bill_no" id="bill_no" class="form-control" >
            <option disabled selected value>Select Bill No</option>
            <%= Billentry.all.where(secure:true, user_id: current_user.id).each do |option| %>
                <option value="<%= option.id %>"><%= option.id %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="col-md-3">
        <div class="field">
          <label for="company_name">Company Name</label>
          <select name="company_name" id="company_name" class="form-control" >
            <option disabled selected value>Select Company Name</option>
            <%= Company.all.where(secure:true, user_id: current_user.id).each do |option| %>
                <option value="<%= option.id %>"><%= option.company_name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="col-md-3">
        <div class="field">
          <label for="data">From</label>
          <input type="date" id="bill_date_from" class="form-control">
        </div>
      </div>
      <div class="col-md-3">
        <div class="field">
          <label for="data">To</label>
          <input type="date" id="bill_date_to" class="form-control">
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4 col-md-offset-4 centered m-t-m text-center">
        <button class="btn btn-success form-control" id="fetchdata">Report</button>
      </div>
    </div>
    <br>
  </div>
</div>