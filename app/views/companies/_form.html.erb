<%= form_for(company) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
  <div class="row">
    <div class="col-md-3">
      <div class="field">
        <%= f.label :company_name %>
        <%= f.text_field :company_name,class: "form-control", required: :true, placeholder: "Enter Company Name" %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="field">
        <%= f.label :company_address %>
        <%= f.text_area :company_address, class: "form-control", required: :true, placeholder: "Enter Company Address" %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="field">
        <%= f.label :contact_no %>
        <%= f.text_field :contact_no, class: "form-control", required: :true, placeholder: "Enter Contact No" %>
      </div>
    </div>
    <div class="col-md-3">
      <div class="field">
        <%= f.label :company_reference %>
        <%= f.text_field :company_reference, class: "form-control", placeholder: "Company Reference Name" %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4">
      <div class="field">
        <%= f.label :previous_amount %>
        <%= f.text_field :previous_amount, value: number_with_precision(f.object.previous_amount, precision: 2) ,class: "form-control", placeholder: "Company Previous Amount" %>
      </div>
    </div>
    <div class="col-md-4">
      <div class="field">
        <%= f.label :net_balance %>
        <%= f.text_field :net_balance, value: number_with_precision(f.object.net_balance, precision: 2) ,class: "form-control", placeholder: "Automatic Fill",disabled: true %>
      </div>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 centered m-t-m text-center">
      <div class="actions">
        <%= f.submit class: "btn-success form-control" %>
      </div>
    </div>
  </div>
</div>
<% end %>
