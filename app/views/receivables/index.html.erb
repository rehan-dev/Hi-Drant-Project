<p id="notice"><%= notice %></p>

<h1>Receivables</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Receiveable amount</th>
      <th>Check date</th>
      <th>Transaction date</th>
      <th>Remarks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receivables.each do |receivable| %>
      <tr>
        <td><%= receivable.company_id %></td>
        <td><%= receivable.receiveable_amount %></td>
        <td><%= receivable.check_date %></td>
        <td><%= receivable.transaction_date %></td>
        <td><%= receivable.remarks %></td>
        <td><%= link_to 'Show', receivable %></td>
        <td><%= link_to 'Edit', edit_receivable_path(receivable) %></td>
        <td><%= link_to 'Destroy', receivable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

