<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Truck no</th>
      <th>Truck driver</th>
      <th>Driver no</th>
      <th>Day start</th>
      <th>Day off</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.truck_no %></td>
        <td><%= truck.truck_driver %></td>
        <td><%= truck.driver_no %></td>
        <td><%= truck.day_start %></td>
        <td><%= truck.day_off %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

